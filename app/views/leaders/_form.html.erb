<%= form_for @leader do |f| %>
	<div>
		<%=f.label:first_name %><br>
		<%=f.text_field:first_name %>
	</div>
	<div>
		<%=f.label:last_name %><br>
		<%=f.text_field:last_name %>
	</div>
	<div>
		<%=f.label:user_name %><br>
		<%=f.text_field:user_name %>
	</div>
	<div>
		<%=f.label:password %><br>
		<%=f.text_field:password %>
	</div>
	<div>
		<%=f.label:room %><br>
		<%=f.text_field:room %>
	</div>
	<div>
		<%=f.label:security_level %><br>
		<%=f.text_field:security_level %>
	</div>

	<% if @leader.id %>
		<%= f.submit "Save Changes" %>
	<% else %>
		<%= f.submit "Add Leader" %>
	<% end %>

<%end%>