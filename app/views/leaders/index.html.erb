<h1>Leaders
<%= link_to "Add a Leader", new_leader_path, class: "btn btn-new" %>
</h1>
<!-- List the current leaders in the database -->
<table border="0" cellspacing="0" cellpadding="0">
  <thead>
    <tr>
      <th width="70%">Name</th>
      <th width="30%">&nbsp;</th>
    </tr>
  </thead>
  <tbody>
  	<% @leaders.each do |leader| %>
      <tr>
    		<td><%= leader.full_name %></td>
        <td><%= link_to "Show", leader_path(leader), class: "btn btn-show" %> <%= link_to "Edit", edit_leader_path(leader), class: "btn btn-edit" %> <%= link_to "Delete", leader_path(leader), method: :delete, confirm: "Are you sure?", class: "btn btn-delete" %></td>
      </tr>
  	<%end%>
  </tbody>
</table>
<br>

<!-- Manager is the only one able to download the archive csv, or to reset the database table -->
<% if is_manager? %>
  <%= link_to "Download as CSV", leaders_path(format: "csv"), class: "btn" %>
  <%= link_to "Reset Leaders", reset_leaders_path, method: :delete, confirm: "Are you sure?", class: "btn btn-delete" %>
<% end %>
