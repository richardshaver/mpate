<!-- Table downloaded as CSV when system manager archives data -->
<% headers = [
	'Color',
	'Number',
	'Score 1',
	'Score 2',
	'Score 3',
	'Score 4',
	'Total Score'
] %>

<%= CSV.generate_line headers %>
<% @teams.each do |team| %><%= CSV.generate_line([
  	team.color,
  	team.number,
  	team.score_one,
  	team.score_two,
  	team.score_three,
  	team.score_four,
  	team.total_score
]) %><% end %>
