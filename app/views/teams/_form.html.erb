<%= form_for @team do |f| %>
	<% if @team.errors.any? %>
		<div id="errors">
			<h5>Something Went Wrong</h5>
			<ul>
				<% @team.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div>
		<%=f.label:number %><br>
		<%=f.number_field:number %>
	</div>
	<div>
		<%=f.label:color %><br>
		<%=f.text_field:color %>
	</div>

	<% if @team.id %>
		<%= f.submit "Save Changes" %>
	<% else %>
		<%= f.submit "Add Team" %>
	<% end %>

<%end%>
