<h2>All Schools</h2>

<p><%= link_to "Add a school", new_school_path %></p>

<ul>
<% @schools.each do |school| %>
  <li><%= school.school_name %> - <%= link_to "Show", school_path(school) %>, <%= link_to "Edit", edit_school_path(school) %>,  <%= link_to "Delete", school_path(school), method: :delete, confirm: "Are you sure?" %></li>
<% end %>
</ul>

