<h1>All Schools
<%= link_to "Add a school", new_school_path, class: "btn btn-new" %>
</h1>
<!-- List the current schools in the database -->

<table border="0" cellspacing="0" cellpadding="0">
  <thead>
    <tr>
      <th width="60%">Name</th>
      <th width="10%">Students</th>
      <th width="30%">&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.school_name %></td>
        <td><%= school.competitors.count %></td>
        <td>
          <%= link_to "Show", school_path(school), class: "btn btn-show" %>
          <%= link_to "Edit", edit_school_path(school), class: "btn btn-edit" %>
          <%= link_to "Delete", school_path(school), method: :delete, confirm: "Are you sure?", class: "btn btn-delete" %>
        </td>
      </tr>
    <%end%>
  </tbody>
</table>
<br>
<!-- Manager is the only one able to download the archive csv, or to reset the database table -->
<% if is_manager? %>
  <%= link_to "Download as CSV", schools_path(format: "csv"), class: "btn" %>
  <%= link_to "Reset Schools", reset_schools_path, method: :delete, confirm: "Are you sure?\nThis will also delete all competitors for this school.", class: "btn btn-delete" %>
<% end %>
