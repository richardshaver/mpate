<%= form_for @school do |f| %>
	<% if @school.errors.any? %>
		<div id="errors">
			<h5>Something Went Wrong</h5>
			<ul>
				<% @school.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div>
		<%= f.label :user_name %><Br>
		<%= f.text_field :username %>
	</div>
	<div>
		<%= f.label :password %><Br>
		<%= f.text_field :password %>
	</div>
	<div>
		<%= f.label :school_name %><Br>
		<%= f.text_field :school_name %>
	</div>
	<div>
		<%= f.label :address_line_1 %><Br>
		<%= f.text_field :address_line_1 %>
	</div>
	<div>
		<%= f.label :address_line_2 %><Br>
		<%= f.text_field :address_line_2 %>
	</div>
	<div>
		<%= f.label :city %><Br>
		<%= f.text_field :city %>
	</div>
	<div>
		<%= f.label :state %><Br>
		<%= f.text_field :state %>
	</div>
	<div>
		<%= f.label :zip %><Br>
		<%= f.number_field :zip %>
	</div>
	<div>
		<%= f.label :phone %><Br>
		<%= f.text_field :phone %>
	</div>
	<div>
		<%= f.label :teachers_attending %><Br>
		<%= f.text_field :teachers_attending %>
	</div>

	<% if @school.id %>
		<%= f.submit "Save Changes" %>
	<% else %>
		<%= f.submit "Add School" %>
	<% end %>
<% end %>