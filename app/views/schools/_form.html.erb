<%= form_for @school do |f| %>
	<!-- If page was reloaded due to errors, display errors -->
	<% if @school.errors.any? %>
		<div id="errors">
			<h5>Something Went Wrong</h5>
			<ul>
				<% @school.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<!-- Display for fields for data entry, prepopulated if data already exists -->
	<div>
		<%= f.label :user_name %>
		<%= f.text_field :user_name %>
	</div>
	<div>
		<%= f.label :password %>
		<%= f.text_field :password %>
	</div>
	<div>
		<%= f.label :school_name %>
		<%= f.text_field :school_name %>
	</div>
	<div>
		<%= f.label :address_line_1 %>
		<%= f.text_field :address_line_1 %>
	</div>
	<div>
		<%= f.label :address_line_2 %>
		<%= f.text_field :address_line_2 %>
	</div>
	<div>
		<%= f.label :city %>
		<%= f.text_field :city %>
	</div>
	<div>
		<%= f.label :state %>
		<%= f.text_field :state %>
	</div>
	<div>
		<%= f.label :zip %>
		<%= f.number_field :zip %>
	</div>
	<div>
		<%= f.label :phone %>
		<%= f.text_field :phone %>
	</div>
	<div>
		<%= f.label :teachers_attending %>
		<%= f.text_field :teachers_attending %>
	</div>

	<!-- If school is already created, we're saving changes
		otherwise it would be a new school and we need to add the record -->	
	<% if @school.id %>
		<%= f.submit "Save Changes" %>
	<% else %>
		<%= f.submit "Add School" %>
	<% end %>
<% end %>