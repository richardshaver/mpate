<%= form_for @manager do |f| %>
	<% if @manager.errors.any? %>
		<div id="errors">
			<h5>Something Went Wrong</h5>
			<ul>
				<% @manager.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div>
		<%=f.label :user_name %>
		<%=f.text_field :user_name %>
	</div>
	<div>
		<%=f.label :password %>
		<%=f.text_field :password %>
	</div>
	<div>
		<%=f.label :email %>
		<%=f.email_field :email %>
	</div>

	<% if @manager.id %>
		<%= f.submit "Save Changes" %>
	<% else %>
		<%= f.submit "Add Manager" %>
	<% end %>

<%end%>
