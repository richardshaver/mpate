<%= form_for @manager do |f| %>
	<div>
		<%=f.label:user_name %><br>
		<%=f.text_field:user_name %>
	</div>
	<div>
		<%=f.label:password %><br>
		<%=f.text_field:password %>
	</div>
	<div>
		<%=f.label:email %><br>
		<%=f.email_field:email %>
	</div>

	<% if @manager.id %>
		<%= f.submit "Save Changes" %>
	<% else %>
		<%= f.submit "Add Manager" %>
	<% end %>

<%end%>
