<h1>Managers
<%= link_to "Add a Manager", new_manager_path, class: "btn btn-new"%>
</h1>
<!-- List the current managers in the database -->
<table border="0" cellspacing="0" cellpadding="0">
  <thead>
    <tr>
      <th width="30%">Username</th>
      <th width="40%">Email</th>
      <th width="30%">&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @managers.each do |manager| %>
      <tr>
        <td><%= manager.user_name %></td>
        <td><%= manager.email %></td>
        <td><%= link_to "Show", manager_path(manager), class: "btn btn-show" %> <%= link_to "Edit", edit_manager_path(manager), class: "btn btn-edit" %> <%= link_to "Delete", manager_path(manager), method: :delete, confirm: "Are you sure?", class: "btn btn-delete" %></td>
      </tr>
    <%end%>
  </tbody>
</table>
