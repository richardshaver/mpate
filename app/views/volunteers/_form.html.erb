<%= form_for @volunteer do |f| %>
	<div>
		<%=f.label:first_name %><br>
		<%=f.text_field:first_name %>
	</div>
	<div>
		<%=f.label:last_name %><br>
		<%=f.text_field:last_name %>
	</div>
	<div>
		<%=f.label:msu_id, "MSU ID" %><br>
		<%=f.text_field:msu_id %>
	</div>
	<div>
		<%=f.label:email %><br>
		<%=f.email_field:email %>
	</div>
	<div>
		<%=f.label:phone %><br>
		<%=f.text_field:phone %>
	</div>
	<div>
		<%=f.label:ref_instructor %><br>
		<%=f.text_field:ref_instructor %>
	</div>

	<% if @volunteer.id %>
		<%= f.submit "Save Changes" %>
	<% else %>
		<%= f.submit "Add Volunteer" %>
	<% end %>


<%end%>